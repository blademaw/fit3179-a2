{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "Median Airbnb nightly costs across Melbourne LGAs",
    "projection": {
        "type": "equirectangular"
    },
    "params": [{
            "name": "highlight",
            "select": {
                "type": "point",
                "on": "mouseover"
            }
        },
        {
            "name": "select",
            "select": "point"
        }
    ],
    "data": {
        "url": "../data/vic_lga.json",
        "format": {
            "type": "topojson",
            "feature": "vic_lga"
        }
    },
    "layer": [{
        "transform": [{
            "lookup": "properties.ABB_NAME",
            "from": {
                "data": {
                    "url": "../data/listings_agg.csv",
                    "format": {
                        "type": "csv"
                    }
                },
                "key": "city",
                "fields": ["med_price"]
            }
        }],
        "mark": {
            "type": "geoshape",
            "stroke": "white"
        },
        "encoding": {
            "color": {
                "field": "med_price",
                "type": "quantitative",
                "title": "Median price",
                "legend": {
                    "labelExpr": "join(['$', datum.value, if(datum.value >= 250, '+', '')], '')"
                },
                "scale": {
                    "scheme": "browns"
                }
            },
            "fillOpacity": {
                "condition": {
                    "param": "select",
                    "value": 1
                },
                "value": 0.3
            },
            "tooltip": [{
                    "field": "properties.ABB_NAME",
                    "type": "nominal",
                    "title": "LGA"
                },
                {
                    "field": "med_price",
                    "type": "quantitative",
                    "title": "Median Airbnb Price",
                    "format": "$"
                }
            ],
            "strokeWidth": {
                "condition": [{
                        "param": "select",
                        "empty": false,
                        "value": 2
                    },
                    {
                        "param": "highlight",
                        "empty": false,
                        "value": 1
                    }
                ],
                "value": 0.4
            }
        }
    }]
}