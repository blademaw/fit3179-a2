{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Airbnbs across Victoria LGAs and their median nightly costs",
        "fontSize": 15,
        "fontWeight": 600,
        "dx": 23
    },
    "background": "#ebd4be",
    "config": {
        "axis": {
            "gridColor": "#dbb38b"
        },
        "style": {
            "cell": {
              "stroke": "transparent"
            }
          }
    },
    "vconcat": [{
            "autosize": {
                "type": "fit",
                "contains": "padding"
            },
            "projection": {
                "type": "equirectangular"
            },
            "width": 750,
            "height": 400,
            "layer": [{
                    "params": [{
                            "name": "highlight",
                            "select": {
                                "type": "point",
                                "on": "mouseover"
                            }
                        },
                        {
                            "name": "select",
                            "select": {
                                "type": "point",
                                "fields": ["properties.ABB_NAME"]
                            }
                        },
                        {
                            "name": "s-box",
                            "values": [{
                                "properties.ABB_NAME": "Whittlesea"
                            }],
                            "select": {
                                "type": "point",
                                "fields": ["properties.ABB_NAME"]
                            }
                        }
                    ],
                    "data": {
                        "url": "../data/vic_lga.json",
                        "format": {
                            "type": "topojson",
                            "feature": "vic_lga"
                        }
                    },
                    "transform": [{
                            "lookup": "properties.ABB_NAME",
                            "from": {
                                "data": {
                                    "url": "../data/listings_agg.csv",
                                    "format": {
                                        "type": "csv"
                                    }
                                },
                                "key": "city",
                                "fields": ["num_listings", "population", "med_price", "norm_listings_pop"]
                            }
                        }
                    ],
                    "mark": {
                        "type": "geoshape",
                        "stroke": "white"
                    },
                    "encoding": {
                        "color": {
                            "field": "norm_listings_pop",
                            "type": "quantitative",
                            "title": "Number of listings per 100 people",
                            "scale": {
                                "scheme": "browns",
                                "type": "threshold",
                                "domain": [0.2, 1, 2]
                            },
                            "legend": {
                                "offset": -200,
                                "orient": "left"
                            }
                        },
                        "fillOpacity": {
                            "condition": [{
                                "param": "select",
                                "value": 1
                            }],
                            "value": 0.4
                        },
                        "tooltip": [{
                                "field": "properties.ABB_NAME",
                                "type": "nominal",
                                "title": "LGA"
                            },
                            {
                                "field": "norm_listings_pop",
                                "type": "quantitative",
                                "title": "Number of listings per 100 people",
                                "format": ".01"
                            },
                            {
                                "field": "med_price",
                                "type": "quantitative",
                                "title": "Median nightly rent",
                                "format": "$d"
                            }
                        ],
                        "strokeWidth": {
                            "condition": [{
                                    "param": "select",
                                    "empty": false,
                                    "value": 2
                                },
                                {
                                    "param": "highlight",
                                    "empty": false,
                                    "value": 1.2
                                }
                            ],
                            "value": 0.4
                        }
                    }
                },
                {
                    
                    "data": {
                        "url": "../data/listings_agg.csv",
                        "format": {
                            "type": "csv"
                        }
                    },
                    "mark": {
                        "type": "circle",
                        "color": "grey",
                        "opacity": 0.8
                    },
                    "encoding": {
                        "longitude": {
                            "field": "mean_long",
                            "type": "quantitative"
                        },
                        "latitude": {
                            "field": "mean_lat",
                            "type": "quantitative"
                        },
                        "size": {
                            "field": "med_price",
                            "type": "quantitative",
                            "title": "Nightly cost",
                            "legend": {
                                "offset": -200,
                                "orient": "left",
                                "format": "$f"
                            }
                        }
                    }
                }
            ]
        },
        {
            "width": 750,
            "height": 20,
            "data": {
                "url": "../data/listings_agg.csv",
                "format": {
                    "type": "csv"
                }
            },
            "layer": [{
                "mark": {
                    "type": "text",
                    "dx": -50,
                    "font": "Roboto",
                    "fontSize": 14
                },
                "encoding": {
                    "color": {
                        "value": "black"
                    },
                    "text": {
                        "value": {"signal": "'Try selecting LGAs from the above map (with shift + click) to see how they compare below:'"}
                    }
                }
            }]
        },
        {
            "hconcat": [{
                    "vconcat": [{
                            "width": 400,
                            "height": 225,
                            "data": {
                                "url": "../data/vic_lga.json",
                                "format": {
                                    "type": "topojson",
                                    "feature": "vic_lga"
                                }
                            },
                            "transform": [{
                                "lookup": "properties.ABB_NAME",
                                "from": {
                                    "data": {
                                        "url": "../data/listings_agg.csv",
                                        "format": {
                                            "type": "csv"
                                        }
                                    },
                                    "key": "city",
                                    "fields": ["num_listings", "population", "med_price"]
                                }
                            }],
                            "layer": [
                                {
                                    "mark": {
                                        "type": "point",
                                        "color": "gray",
                                        "opacity": 1,
                                        "size": 100
                                    },
                                    "encoding": {
                                        "x": {
                                            "field": "num_listings",
                                            "type": "quantitative"
                                        },
                                        "y": {
                                            "field": "population",
                                            "type": "quantitative"
                                        }
                                    }
                                },
                                {
                                    "params": [
                                    {
                                        "name": "select",
                                        "select": {
                                            "type": "point",
                                            "fields": ["properties.ABB_NAME"]
                                        }
                                    }
                                ],
                                    "transform": [{
                                        "filter": {
                                            "selection": "select"
                                        }
                                    }],
                                    "mark": {
                                        "type": "point",
                                        "color": "brown",
                                        "size": 100,
                                        "opacity": 1
                                    },
                                    "encoding": {
                                        "x": {
                                            "field": "num_listings",
                                            "type": "quantitative",
                                            "scale": {
                                                "type": "linear"
                                            },
                                            "title": "Total number of Listings"
                                        },
                                        "y": {
                                            "field": "population",
                                            "type": "quantitative",
                                            "title": "Population (2018)"
                                        },
                                        "tooltip": [{
                                            "field": "properties.ABB_NAME",
                                            "title": "LGA",
                                            "type": "nominal"
                                        },
                                        {
                                            "field": "num_listings",
                                            "title": "Number of total listings",
                                            "type": "quantitative"
                                        },
                                        {
                                            "field": "population",
                                            "title": "Population (2018)",
                                            "type": "quantitative"
                                        }]
                                    }
                                }
                            ]
                        },
                        {
                            "width": 400,
                            "height": 325,
                            "data": {
                                "url": "../data/listings_agg.csv",
                                "format": {
                                    "type": "csv"
                                }
                            },
                            "mark": {
                                "type": "bar",
                                "color": "brown",
                                "opacity": 1
                            },
                            "encoding": {
                                "y": {
                                    "field": "city",
                                    "type": "nominal",
                                    "title": "LGA",
                                    "sort": {"field": "med_weekly_price", "type": "quantitative"}
                                },
                                "x": {
                                    "field": "med_weekly_price",
                                    "type": "quantitative",
                                    "title": "Median weekly cost",
                                    "axis": {"format": "$f"}
                                },
                                "fillOpacity": {
                                    "condition": [{
                                        "param": "select",
                                        "value": 1
                                    }],
                                    "value": 0.4
                                },
                                "tooltip": [{
                                    "field": "city",
                                    "type": "nominal",
                                    "title": "LGA"
                                },
                                {
                                    "field": "med_weekly_price",
                                    "title": "Median weekly price",
                                    "type": "quantitative",
                                    "format": "$.0f"
                                }]
                            }
                        }
                    ]
                },
                {
                    "width": 200,
                    "autosize": {
                        "type": "pad"
                    },
                    "data": {
                        "url": "../data/revised_cleansed_listings.csv",
                        "format": {
                            "type": "csv"
                        }
                    },
                    "transform": [{
                        "lookup": "city",
                        "from": {
                            "data": {
                                "url": "../data/listings_agg.csv",
                                "format": {
                                    "type": "csv"
                                }
                            },
                            "key": "city",
                            "fields": ["num_listings", "population", "med_price"]
                        }
                    },
                    {
                        "filter": {
                            "selection": "s-box"
                        }
                    },
                    {
                        "filter": "datum.price < 900 && datum.price > 1"
                    }],
                    "mark": {
                        "type": "boxplot",
                        "extent": "min-max",
                        "color": "brown"
                    },
                    "encoding": {
                        "x": {
                            "field": "price",
                            "type": "quantitative",
                            "title": "Nightly rent price ($)",
                            "axis": {
                                "grid": false
                            }
                        },
                        "y": {
                            "field": "city",
                            "type": "nominal",
                            "title": "LGA",
                            "sort": "y"
                        }
                    }
                }
            ]
        }
    ]
}